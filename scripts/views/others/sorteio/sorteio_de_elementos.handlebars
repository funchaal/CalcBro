<div id="main_container">
    <div class="sorteio" id="data_container">
        <div class="data-box sorteio" id="sorteio_data_box_result">
            <div class="header">
                <span>Sorteio</span>
            </div>
            <span id="zzz">zzz</span>
            <div id="calc_result_content_container">
                <div id="calc_result_text_box">
                    <span id="calc_result_text"></span>
                </div>
            </div>
             <img copy-element="calc_result_text" class="clipboard-icon" src="/images/icons/clipboard/clipboard.svg">
        </div>
        <form class="data-box sorteio" id="data_box_form">
            <div class="header">
                <span>Ajuste</span>
                <nav id="calc_option">
                    <ul>
                        <li><button type="button" link="/sorteio/sorteio-de-numeros">Sorteio de números</button></li>
                        <li><button type="button" class="on" link="/sorteio/sorteio-de-elementos">Sorteio de elementos</button></li>
                    </ul>
                    <div id="calc_option_button_left" class="button"><img class="arrow-thin" src="/images/icons/arrow/arrow_thin_dark.svg" alt=""></div>
                    <div id="calc_option_button_right" class="button"><img class="arrow-thin" src="/images/icons/arrow/arrow_thin_dark.svg" alt=""></div>
                </nav>
            </div>
            <div class="input-container">
                <div class="box">
                    <div class="label-float">
                        <input type="text" id="valor_1" class="calc-input" autocomplete="off" placeholder=" " required>    
                        <label>Elementos separados por vírgula </label>
                    </div>
                    <div class="label-float">
                        <input type="number" step="1" id="valor_2" class="calc-input" autocomplete="off" placeholder=" " required>    
                        <label>Quantidade de elementos </label>
                    </div>
                </div>
                <div id="sorteio_divisor"></div>
                <div class="box">
                    <div class="switch-box">
                        <span class="switch-label">Repetido</span>
                        <label class="switch">
                            <input class="calc-input" type="checkbox" id="valor_3">
                            <span class="slider round"></span>
                        </label>
                    </div>
                </div>
            </div>
            <button type="submit" id="calc_button_calculate" form="data_box_form">Sortear</button>
        </form>
    </div>
</div>
<style>
    #show_result_button {
        display: none;
    }
    #sorteio_data_box_result #calc_result_text {
        font-size: 2em;
    }
</style>