<div id="main_container">
    <div class="data-container">
        <form id="data_box_form" class="data-box calc-data-box-form">
            <section class="header">
                <span>Polígono</span>
                <div id="calc_option">
                    <ul>
                        <li><button type="button" class="on" link="/poligono/apotema">Apótema</button></li>
                        <li><button type="button" link="/poligono/area">Área</button></li>
                        <li><button type="button" link="/poligono/numero-de-lados">Número de lados</button></li>
                        <li><button type="button" link="/poligono/perimetro">Perímetro</button></li>
                        <li><button type="button" link="/poligono/semiperimetro">Semiperímetro</button></li>
                        <li><button type="button" link="/poligono/valor-do-lado">Valor do lado</button></li>
                    </ul>
                    <div id="calc_option_button_left" class="button"><img class="arrow-thin" src="/images/icons/arrow/arrow_thin_dark.svg" alt=""></div>
                    <div id="calc_option_button_right" class="button"><img class="arrow-thin" src="/images/icons/arrow/arrow_thin_dark.svg" alt=""></div>
                </div>
            </section>
            <div id="data_box_form_input">
                <section class="calc-multiple-input-container">
                    <div class="label-float">
                        <input type="number" step="any" id="valor_1" class="calc-input" autocomplete="off" placeholder=" " required>    
                        <label>Semiperímetro </label>
                    </div>
                    <span class="or-input-separation">ou</span>
                    <div class="label-float">
                        <input type="number" step="any" id="valor_2" class="calc-input" autocomplete="off" placeholder=" " required>    
                        <label>Perímetro </label>
                    </div>
                </section>
                <div class="label-float">
                    <input type="number" step="any" id="valor_3" class="calc-input" autocomplete="off" placeholder=" " required>    
                    <label>Área </label>
                </div>
            </div>
            <button type="submit" id="calc_button_calculate" form="data_box_form" onclick="calcPoligonoApotema()">Calcular</button>
        </form>
        <div id="data_box_result" class="data-box">
            <section class="header">
                <span>Resultado</span>
            </section>
            <span id="zzz">zzz</span>
            <div id="calc_result_content_container">
                <div id="calc_result_text_box">
                    <span id="calc_result_text"></span>
                </div>
                <div id="calc_result_more_info_box">
                    <label for="calc_more_info_text_1">Perímetro: </label>
                    <span id="calc_more_info_text_1" class="calc-result-more-info-text"></span>
                    <label for="calc_more_info_text_2">Semiperímetro: </label>
                    <span id="calc_more_info_text_2" class="calc-result-more-info-text"></span>
                </div>
            </div>
            <img copy-element="calc_result_text" class="clipboard-icon" src="/images/icons/clipboard/clipboard.svg">
        </div>
    </div>
</div>