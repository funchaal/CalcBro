<div id="main_container" type="calc">
    <div class="data-container">
        <form id="data_box_form" class="data-box div-tm-ifc calc-data-box-form">
            <div class="header">
                <h1 class="text-tm-ifc-hard">Notação ciêntifica</h1>
                <nav id="calc_option">
                    <ul id="calc_option_mover">
                        <li><button type="button" class="option"link="/notacao-cientifica/converter-para-notacao-cientifica">Converter para notação ciêntifica</button></li>
                        <li><button type="button" class="option on" link="/notacao-cientifica/converter-para-decimal">Converter para decimal</button></li>
                    </ul>
                    <div id="calc_option_control_buttonl_box" class="control-button"><img id="calc_option_control_buttonl" class="arrow-thin" src="/images/icons/arrow/arrow_thin_dark.svg" alt=""></div>
                    <div id="calc_option_control_buttonr_box" class="control-button"><img id="calc_option_control_buttonr" class="arrow-thin" src="/images/icons/arrow/arrow_thin_dark.svg" alt=""></div>
                </nav>
            </div>
            <div id="data_box_form_input">
                <div class="label-float">
                    <input type="text" id="valor_1" class="calc-input" autocomplete="off" placeholder=" " required>    
                    <label>Valor em notação ciêntifica. Ex.: 1x10^5 </label>
                </div>
            </div>
        <button type="submit" id="calculate_button" form="data_box_form">Calcular</button>
        </form>
        <div id="data_box_result" type="hide" class="data-box">
            <div class="header">
                <span>Resultado</span>
            </div>
            <span id="zzz">zzz</span>
            <div id="calc_result_content_container">
                <div id="calc_result_text_box">
                    <span id="calc_result_text"></span>
                </div>
            </div>
            <div class="clipboard-icon-box">
                <img copy-element="calc_result_text" class="clipboard-icon" src="/images/icons/clipboard/clipboard.svg">
            </div>
        </div>
    </div>
</div>